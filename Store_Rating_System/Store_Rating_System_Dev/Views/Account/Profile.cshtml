@model User

@if (Model == null)
{
    <p>User not found</p>
}
else
{

    <h4>@Model.UserName</h4>

    @if (Model.Image != null)
    {
        <div class="user_photo">
            <img alt="photo" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" />
        </div>
    }
    else
    {
        <p>No photo</p>
    }

    <p>Email: @Model.Email</p>
    <p>Country: @Model.Country</p>
    <p>City: @Model.City</p>

    @if (ViewBag.UserName == Model.UserName)
    {
        <a class="btn btn-primary" asp-action="ProfileEdit">Edit</a>
    }

}