@model Dictionary<string, Rating>

    <h4>All Account Ratings</h4>

    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <table class="table table-sm table-bordered">
        <tr>
            <th>Store_name</th>
            <th>Comment</th>
            <th>Value</th>
            <th>Date_of_publication</th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="3">No Ratings</td></tr>
        }
        else
        {
            foreach (var record in Model)
            {
                <tr>
                    <td>@record.Key</td>
                    <td>@record.Value.Comment</td>
                    <td>
                        @switch (record.Value.Rate_value)
                        {
                            case true:  <a>Positive</a> break;
                            case false: <a>Negative</a> break;
                            default: break;
                        }
                    </td>
                    <td>@record.Value.Date_of_publication</td>
                </tr>
            }
        }
    </table>

