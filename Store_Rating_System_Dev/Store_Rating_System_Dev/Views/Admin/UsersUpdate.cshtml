@model User

<h4>Edit User</h4>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="UsersUpdate" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" disabled />
    </div>
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label for="NewPassword">Password</label>
        <input id="NewPassword" name="NewPassword" class="form-control" />
    </div>
    <div>
        <label asp-for="Country"></label>
        <select asp-for="Country"
                asp-items="@new SelectList(Enum.GetNames(typeof(Countries)))"></select>
    </div>
    <div>
        <label asp-for="City"></label>
        <select asp-for="City"
                asp-items="@new SelectList(Enum.GetNames(typeof(Cities)))"></select>
    </div>
    <div>
        <label for="NewImage">Photo </label>
        <input type="file" name="NewImage" id="NewImage">
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="UsersRead" class="btn btn-secondary">Cancel</a>
</form>