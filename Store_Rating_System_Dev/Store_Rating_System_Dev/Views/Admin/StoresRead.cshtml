@model IEnumerable<Store>

<h4>Admin Panel</h4>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="stores table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Image</th>
        <th>Category</th>
        <th>Url</th>
        <th>Number_of_ratings</th>
        <th>Number_of_pos_ratings</th>
        <th>Avarange_rating</th>
        <th>Description</th>
        <th>Country</th>
        <th>City</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="12">No Stores</td></tr>
    }
    else
    {
        foreach (Store store in Model)
        {
        <tr>
            <td>@store.ID</td>
            <td>@store.Name</td>
            @if (store.Image != null)
            {
                <td><img alt="logo" src="data:image/jpeg;base64,@Convert.ToBase64String(store.Image)" /></td>
            }
            else
            {
                <td>No logo</td>
            }
            <td>@store.Category</td>
            <td>@store.Url</td>
            <td>@store.Number_of_ratings</td>
            <td>@store.Number_of_pos_ratings</td>
            <td>@store.Avarange_rating</td>
            <td>@store.Description</td>
            <td>@store.Country</td>
            <td>@store.City</td>
            <td>
                <form asp-action="StoresDelete" asp-route-id="@store.ID" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="StoresUpdate"  asp-route-id="@store.ID">Edit</a>
                    <button class="btn btn-sm btn-primary" type="submit">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
        }
    }
</table>
<a class="btn btn-primary" asp-action="StoresCreate">Create</a>
<a class="btn btn-danger btn-primary" asp-action="Index">Back</a>
